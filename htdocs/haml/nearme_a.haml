  %head
    %meta{ :charset => "utf-8" }/

    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    -# Remove this if you use the .htaccess
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/

    %title
      Gwinnett County Government - Mobile Site

    %link{ :href => "stylesheets/app.css", :media => "all", :rel => "stylesheet" }/
    %script{ :src => "javascripts/vendor/custom.modernizr.js" }

  %body
    %header
      .row.session-nav
        .header-logo.small-6.columns
          %a(href="#") Home
        .button-wrapper.small-3.columns
          %a.button.greyblue.near-me(href="#")
            %span.icon
            Near Me
        .button-wrapper.small-3.columns
          %a.button.greyblue(href="#") Log In
      .row.highlighted-wrapper.darker-greygreen.login-message
        %p ::: Welcome, Jane Doe :::
      .row.main-nav
        .small-4.columns
          %a(href="index.html") Home
        .small-4.columns
          %a(href="departments.html") Departments
        .small-4.columns
          %a(href="emergency_contacts.html") Important<br />Numbers
    %section
      %form.site-search.row
        .small-6.columns
          %input.search(type="text" name="search" value="Search" onfocus="if(this.value == 'Search') { this.value = ''; }" onblur="if(this.value == '') { this.value = 'Search'; }")
        .small-6.columns
          %select.quicksearch
            %option(value="") Find it fast
            %option(value="location1") Location One
            %option(value="location2") Location Two
    .page-title
      %h1 Near Me
    %section.highlighted-wrapper.medium-blue
      %form.nearme-param
        .row
          .small-3.columns
            %label(for="distance") Distance:
          .small-9.columns
            %select.distance(name="distance")
              %option(value="1") 1 mile
              %option(value="5") 5 miles
              %option(value="10") 10 miles
        .row
          .small-3.columns
            %label(for="activity") Activity:
          .small-9.columns
            %select.activity(name="activity")
              %option(value="parks_recreation") Parks and Recreation
              %option(value="administration") Administration
              %option(value="community_service") Community Service
    %section
      .map-wrapper
        #map-canvas

    %section
      .title-bar
        %h2 Contact Us
        %a.view-all(href="#") view all contacts
      .wrapper
        .contact-details
          .row
            %h3.small-12.columns Gwinnett Justice  & Administration Center
          .row
            .small-7.columns
              %p 75 Langley Drive<br />Lawrenceville, GA 30046
            .small-5.columns
              %p Primary Phone: <a href="tel:770.822.8000">770.822.8000</a>
          .row.button-list
            .button-wrapper.small-4.columns
              %a.button Map It
            .button-wrapper.small-4.columns
              %a.button Directions
            .button-wrapper.small-4.columns
              %a.button Call
    %footer
      .row.button-list
        .button-wrapper.small-12.columns.newsletter-button
          %a.button.green(href="#") Sign up for Gwinnett County e-mail newsletters <span class="icon letter"></span>
      .highlighted-wrapper.greygreen-gradient.text-center.full-site-link
        %a(href="#") ::: <span style="text-decoration: underline;">View Full Site</span> :::
      .highlighted-wrapper.dark-greygreen.text-center.copyright
        %p Official Site of Gwinnett County Government<br />Copyright 2012, Gwinnett County Board of Commissioners


